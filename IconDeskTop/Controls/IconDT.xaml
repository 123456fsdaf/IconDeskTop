<UserControl x:Class="IconDeskTop.Controls.IconDT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconDeskTop.Controls"
             mc:Ignorable="d"
             x:Name="Home"
             d:DesignHeight="450" d:DesignWidth="800" Margin="20">
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <ThicknessAnimation 
                            Storyboard.TargetName="Home"
                            Storyboard.TargetProperty="Margin"
                            From="-50 0 0 0" To="0" Duration="0:0:0:1.5">
                    </ThicknessAnimation>
                    <DoubleAnimation 
                            Storyboard.TargetName="Home"
                            Storyboard.TargetProperty="Opacity"
                            From="0" To="1" Duration="0:0:0:1.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid 
             Background="Black">
        <TextBlock Text="这是一个图标" Foreground="White" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontSize="25" />
        <Grid.Effect>
            <DropShadowEffect 
                BlurRadius="20" 
                Color="White"
                ShadowDepth="0" 
                Direction="0" 
                Opacity="0.5"/>
        </Grid.Effect>
    </Grid>
</UserControl>
