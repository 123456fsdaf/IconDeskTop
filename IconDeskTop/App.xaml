<Application x:Class="IconDeskTop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IconDeskTop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/WindowsStyle.xaml"/>
                <ResourceDictionary Source="Style/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Style/Button.xaml"/>
                <ResourceDictionary Source="Style/TipTop.xaml"/>
                <ResourceDictionary Source="Style/ScrollbarViewer.xaml"/>
                <ResourceDictionary Source="Style/Menu.xaml"/>
                <ResourceDictionary Source="Theme\Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="IconFont">pack://application:,,,/Assets/#DeskTopIcon</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>

