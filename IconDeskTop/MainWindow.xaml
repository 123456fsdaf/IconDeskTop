<Window x:Class="IconDeskTop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IconDeskTop"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Title="MainWindow" Height="40" Width="40"
        >
    <Grid>
        
        <Button MouseLeftButtonDown="MainWindow_MouseLeftButtonDown" Style="{DynamicResource ButtonStyle1}" Click="Button_Click"/>
    </Grid>
</Window>
